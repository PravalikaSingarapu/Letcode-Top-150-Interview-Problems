class Solution {
    public int maxProfit(int[] prices) {
        int maxProfit=0;
        int currentPrice=prices[0];
        int n= prices.length;
        for(int i=1;i<n;i++){
            if (prices[i]>currentPrice){
                maxProfit += prices[i]-currentPrice;
            }
            currentPrice= prices[i];
        }
        return maxProfit;
    }
}
